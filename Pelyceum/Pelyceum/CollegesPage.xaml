<Page
    x:Class="Pelyceum.CollegesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pelyceum"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

   
    <StackPanel>
    <ListView ItemsSource="{x:Bind Colleges}" ItemClick="ListView_ItemClick" IsItemClickEnabled="True" SelectionMode="None">
            <ListView.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search: "/>
                    <TextBox x:Name ="SearchTextBox" PlaceholderText="Enter the Full College Name"/>
                    </StackPanel>
                    <Button Content= "Click to see the Magic" Click="SearchButton"/>
                </StackPanel>
            </ListView.Header>
        <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:College">
                    <StackPanel>
                        <TextBlock Text="{x:Bind name}"/>
                        <TextBlock Text="{x:Bind loc}"/>
                    </StackPanel>
                </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </StackPanel>
</Page>
